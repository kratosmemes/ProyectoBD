<html>
<head>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <title>Clientes</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <!-- Links -->
    <ul class="navbar-nav">
     <li class="nav-item">
       <a class="nav-link" href="/altas">Dar alta Cliente</a>
     </li>
     <li class="nav-item">
       <a class="nav-link" href="/consultas">Lista de Clientes</a>
     </li>
     <li class="nav-item">
       <a class="nav-link" href="/propiedades/all">Propiedades</a>
     </li>
     <li class="nav-item">
       <a class="nav-link" href="/altasrentas">Renta de propiedades</a>
     </li>
   </ul>
 </nav>

<div >
<h4>Buscar por Nombre</h4>
<form method=POST action="/busquedanombre" class=form-inline>
<input type=text name="nombre" class="form-control"  placeholder="Nombre">
<button class="btn btn-primary mb-2" type="submit">Buscar</button>
</form>
</div>



<table class="table table-striped table-responsive-md btn-table">
    <thead>
    <tr>
    <th>ID</th>
    <th>Direccion</th>
    <th>Ciudad</th>
    <th>Continente</th>
    <th>Distrito</th>
    <th>Nombre</th>
    <th>Apellidos</th>
    <th>Modificar</th>

    </tr>
    </thead>
    <tbody>
    <% for(var i=0;i<customers.length;i++){ %>
    <tr>
    <td><%=customers[i]._id%></td>
    <td><%=customers[i].Adress%></td>
    <td><%=customers[i].City%></td>
    <td><%=customers[i].Country%></td>
    <td><%=customers[i].District%></td>
    <td><%=customers[i].FirstName%></td>
    <td><%=customers[i].LastName%></td>
    <td>
      <a
      class="<%= customers[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
      href="/estado/<%= customers[i]._id %>">Estado
      </a>
    <a href="/actualizar/<%= customers[i]._id%>" class="btn btn-info">Modificar</a>
    <a href="/delete/<%= customers[i]._id%>" class="btn btn-danger">Eliminar</a>
    </td>
    </tr>
    <%}%>
    </tbody>
    </table>
</body>
</html>
    